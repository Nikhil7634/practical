@{
    ViewBag.Title = "Currenct Converter";
}

<h2>Currency Converter</h2>

<form method="post" action="@Url.Action("Convert","Home")">
    <label for="currency">Select Conversion:</label>
    <select id="currency" name="currency">
        <option value="INRtoUSD">INR to USD</option>
        <option value="USDtoINR">USD to INR</option>
    </select> <br> <br>
    <label for="amount">Enter Amount:</label>
    <input type="text" id="amount" name="amount" /><br> <br>

    <input type="submit" value="Convert" />
</form>

@if (ViewBag.Result != null)
{
    <h3>Result:@ViewBag.Result</h3>
}